@page
@model QrCodeRenderer.Pages.GenerateQrCodeModel
@{
    ViewData["Title"] = "QR Code";
}
<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="col-sm-12 col-md-3 col-lg-4">
        <div class="row">
            <div class="input-group">
                <input
                    id="floatingInput"
                    asp-for="ContentQrCode"
                    class="form-control"
                    placeholder="Type any value to QR code content"
                    value="Test"/>
                <div class="input-group-append">
                    <button asp-page="RenderQrCode" class="btn btn-primary" type="submit">Get</button>
                </div>
            </div>
            <span asp-validation-for="ContentQrCode" class="text-danger"></span>
        </div>
    </div>
</form>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}
